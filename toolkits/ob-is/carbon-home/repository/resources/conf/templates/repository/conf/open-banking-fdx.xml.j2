<Server xmlns="http://wso2.org/projects/carbon/open-banking-fdx.xml">
     <DCR>
         {% if open_banking_fdx.dcr.maximum_duration_period is defined %}
         <MaximumDurationPeriod>{{ open_banking_fdx.dcr.maximum_duration_period }}</MaximumDurationPeriod>
         {% endif %}
         {% if open_banking_fdx.dcr.maximum_lookback_period is defined %}
         <MaximumLookbackPeriod>{{ open_banking_fdx.dcr.maximum_lookback_period }}</MaximumLookbackPeriod>
         {% endif %}
         {% if open_banking_fdx.dcr.token_endpoint_auth_method is defined %}
         <DefaultTokenEndpointAuthMethod>{{ open_banking_fdx.dcr.default_token_endpoint_auth_method }}</DefaultTokenEndpointAuthMethod>
         {% else %}
         <DefaultTokenEndpointAuthMethod>private_key_jwt</DefaultTokenEndpointAuthMethod>
         {% endif %}
    </DCR>
</Server>


